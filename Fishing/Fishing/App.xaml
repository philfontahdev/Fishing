<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fishing.App">
    <Application.Resources>
        <!--Colors-->
        <Color x:Key="Background" >#12140c</Color>
        <Color x:Key="Accent" >#BFE05F</Color>
        <Color x:Key="BackgroundGradient" >#272821</Color>
        <Color x:Key="BodyText" >#797A76</Color>
        <!--Styles-->
        <Style x:Key="OnboardingHeader" TargetType="Label">
            <Setter Property="TextColor" >White</Setter>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontSize" >32</Setter>
        </Style>
        <Style x:Key="OnboardingContent" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BodyText}"/>
            <Setter Property="FontFamily" Value="SemiBoldFont"/>
            <Setter Property="Margin" Value="20.0"/>
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style x:Key="SubHeader" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontFamily" Value="SemiBoldFont"/>
            <Setter Property="FontSize" Value="7" />
        </Style>
    </Application.Resources>
</Application>